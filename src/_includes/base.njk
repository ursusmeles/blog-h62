<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="canonical" href="https://blog.h62.pl{{ page.url }}">
  <title>{{ title or 'Blog o RPG'}} | Heliocantharus RPG</title>

  <meta name="description" content="{{ description or 'Materiały RPG, tabele i poradniki do stylu gry typu sandbox' }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://blog.h62.pl{{ page.url }}">
  <meta property="og:title" content="{{ title or 'Blog o RPG'}} | Heliocantharus RPG">
  <meta property="og:description" content="{{ description or 'Materiały RPG, tabele i poradniki do stylu gry typu sandbox' }}">
  <meta property="og:image" content="https://blog.h62.pl/images/{{ og_image or 'heliocantharus.png' }}">
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title or 'Blog o RPG'}} | Heliocantharus RPG">
  <meta name="twitter:description" content="{{ description or 'Materiały RPG, tabele i poradniki do stylu gry typu sandbox' }}">
  <meta name="twitter:image" content="https://blog.h62.pl/images/{{ og_image or 'heliocantharus.png' }}">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="shortcut icon" href="/favicon.ico" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <meta name="apple-mobile-web-app-title" content="Helio62" />
  <link rel="manifest" href="/site.webmanifest" />
  <script>
  const storageKey = 'helio-theme-pref';
  const getColorPreference = () => {
    if (localStorage.getItem(storageKey)) return localStorage.getItem(storageKey);
    return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
  };

  document.documentElement.setAttribute('data-theme', getColorPreference());
</script>
</head>
<body>
  <a href="#main-content" class="skip-link">Przejdź do treści</a>
  <header class="stack full-bleed">
  <div class="header__top">
  <span>RPG · sandbox · game design</span>
    <nav aria-label="Główna nawigacja">
      <ul role="list">
        <li><a href="/" {{ 'aria-current=page' if page.url == '/' }}>Start</a></li>
        <li><a href="/blog/" {{ 'aria-current=page' if page.url == '/blog/' }}>Blog</a></li>
        <li><a href="/materialy/" {{ 'aria-current=page' if page.url == '/materialy/' }}>Materiały</a></li>
        <li><a href="/info/" {{ 'aria-current=page' if page.url == '/info/' }}>Info</a></li>
      </ul>
    </nav>
    </div>
    {% if page.url == '/' %}
      <h1 class="header__brand">
        <a href="/" rel="home" class="logo-mask">
          <span class="visually-hidden">Heliocantharus</span>
        </a>
      </h1>
    {% else %}
      <div class="header__brand">
        <a href="/" rel="home" class="logo-mask">
          <span class="visually-hidden">Heliocantharus</span>
        </a>
      </div>
    {% endif %}
        <button id="theme-toggle" class="theme-switch" aria-label="Przełącz motyw">
  <span class="theme-switch__thumb"></span>
  
    <span class="theme-switch__icon moon" aria-hidden="true">
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
  </span>
  <span class="theme-switch__icon sun" aria-hidden="true">
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><circle cx="12" cy="12" r="5"/><path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/></svg>
  </span>

</button>
  </header>

  <main id="main-content" tabindex="-1">
    {% if title %}
      <h1>{{ title }}</h1>
    {% endif %}
    
    {% if description %}
      <p class="description">{{ description }}</p>
    {% endif %}
    <article class="flow">
    {{ content | safe }}
    </article>
    <div class="color-tester wrapper">
  <h2>Primary Palette</h2>
  <div class="color-grid">
    <div class="swatch" style="background: var(--primary-lll)"><span>lll</span></div>
    <div class="swatch" style="background: var(--primary-ll)"><span>ll</span></div>
    <div class="swatch" style="background: var(--primary-l)"><span>l</span></div>
    <div class="swatch" style="background: var(--primary)"><span>base</span></div>
    <div class="swatch" style="background: var(--primary-d)"><span>d</span></div>
    <div class="swatch" style="background: var(--primary-dd)"><span>dd</span></div>
    <div class="swatch" style="background: var(--primary-ddd)"><span>ddd</span></div>
  </div>

  <h2>Secondary Palette</h2>
  <div class="color-grid">
    <div class="swatch" style="background: var(--secondary-lll)"><span>lll</span></div>
    <div class="swatch" style="background: var(--secondary-ll)"><span>ll</span></div>
    <div class="swatch" style="background: var(--secondary-l)"><span>l</span></div>
    <div class="swatch" style="background: var(--secondary)"><span>base</span></div>
    <div class="swatch" style="background: var(--secondary-d)"><span>d</span></div>
    <div class="swatch" style="background: var(--secondary-dd)"><span>dd</span></div>
    <div class="swatch" style="background: var(--secondary-ddd)"><span>ddd</span></div>
    <div class="swatch" style="background: var(--secondary-dddd)"><span>dddd</span></div>
  </div>

  <h2>Off Colors</h2>
  <div class="color-grid">
    <div class="swatch" style="background: var(--offwhite)"><span>white</span></div>
    <div class="swatch" style="background: var(--offblack)"><span>black</span></div>
    <div class="swatch" style="background: var(--offblack-purple)"><span>purple-black</span></div>
  </div>
</div>
    <section>
    <h2>Ostatnie wpisy</h2>
<ul role="list" class="flow post-list">
  {%- for post in collections.posts | reverse -%}
    <li class="post-card">
      <article>
        <h3>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h3>
        <time datetime="{{ post.date | dateFilter }}">
          {{ post.date | dateFilter }}
        </time>
        <p>{{ post.data.description }}</p>
      </article>
    </li>
  {%- endfor -%}
</ul>
    </section>
  </main>

<footer class="glow border-bottom">
 <div class="footer__meta">
      <h2>Heliocantharus</h2>
      <p>Gry fabularne, sandbox, game design.</p>
      <p>&copy; 2026 Mateusz Nowak · Heliocantharus. Licencja: CC BY-NC-SA 4.0.</p>
      <p class="footer__status">Heliocantharus RPG nie używa ciasteczek i nie śledzi Cię w żaden sposób. Więcej informacji: <a href="/polityka-prywatnosci/">Polityka&nbsp;prywatności</a>.</p>
    </div>
<nav aria-label="Stopka">
      <ul role="list" class="footer__list">
        <li>
          <a href="/rss.xml" aria-label="RSS Feed">
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 11a9 9 0 0 1 9 9"></path><path d="M4 4a16 16 0 0 1 16 16"></path><circle cx="5" cy="19" r="1"></circle></svg>
            <span class="icon-label">RSS</span>
          </a>
        </li>
        <li>
          <a href="https://github.com/ursusmeles/blog-h62/" aria-label="GitHub" target="_blank">
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
            <span class="icon-label">GitHub</span>
          </a>
        </li>
        <li>
          <a href="https://youtube.com" aria-label="YouTube" target="_blank">
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.42a2.78 2.78 0 0 0-1.94 2C1 8.11 1 12 1 12s0 3.89.46 5.58a2.78 2.78 0 0 0 1.94 2c1.72.42 8.6.42 8.6.42s6.88 0 8.6-.42a2.78 2.78 0 0 0 1.94-2C23 15.89 23 12 23 12s0-3.89-.46-5.58z"></path><polygon points="9.75 15.02 15.5 12 9.75 8.98 9.75 15.02"></polygon></svg>
            <span class="icon-label">YouTube</span>
          </a>
        </li>
      </ul>
    </nav>
    <div class="site-seal">
  <img src="/img/heliocantharus.svg" alt="" aria-hidden="true" width="64" height="64"/>
</div>
</footer>
<script>
  const toggle = document.querySelector('#theme-toggle');
  const root = document.documentElement;

  if (toggle) {
    toggle.addEventListener('click', () => {
      const currentTheme = root.getAttribute('data-theme');
      const nextTheme = currentTheme === 'light' ? 'dark' : 'light';
      
      root.setAttribute('data-theme', nextTheme);
      localStorage.setItem('helio-theme-pref', nextTheme);
    });
  }
</script>
</body>
</html>
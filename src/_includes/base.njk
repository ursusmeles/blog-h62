<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="canonical" href="https://blog.h62.pl{{ page.url }}">
  <title>{{ title or 'Blog o RPG'}} | Heliocantharus RPG</title>

  <meta name="description" content="{{ description or 'Materiały RPG, tabele i poradniki do stylu gry typu sandbox' }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://blog.h62.pl{{ page.url }}">
  <meta property="og:title" content="{{ title or 'Blog o RPG'}} | Heliocantharus RPG">
  <meta property="og:description" content="{{ description or 'Materiały RPG, tabele i poradniki do stylu gry typu sandbox' }}">
  <meta property="og:image" content="https://blog.h62.pl/images/{{ og_image or 'heliocantharus.png' }}">
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title }} | Heliocantharus RPG">
  <meta name="twitter:description" content="{{ description or 'Materiały RPG, tabele i poradniki do stylu gry typu sandbox' }}">
  <meta name="twitter:image" content="https://blog.h62.pl/images/{{ og_image or 'heliocantharus.png' }}">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="shortcut icon" href="/favicon.ico" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <meta name="apple-mobile-web-app-title" content="Helio62" />
  <link rel="manifest" href="/site.webmanifest" />
  <script>
  const storageKey = 'helio-theme-pref';
  const getColorPreference = () => {
    if (localStorage.getItem(storageKey)) return localStorage.getItem(storageKey);
    return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
  };

  document.documentElement.setAttribute('data-theme', getColorPreference());
</script>
</head>
<body>
  <a href="#main-content" class="skip-link">Przejdź do treści</a>
  <header class="stack">
  <div class="header__top">
  <span>RPG · sandbox · game design</span>
    <nav aria-label="Główna nawigacja">
      <ul role="list">
        <li><a href="/" {{ 'aria-current=page' if page.url == '/' }}>Start</a></li>
        <li><a href="/blog/" {{ 'aria-current=page' if page.url == '/blog/' }}>Blog</a></li>
        <li><a href="/materialy/" {{ 'aria-current=page' if page.url == '/materialy/' }}>Materiały</a></li>
        <li><a href="/info/" {{ 'aria-current=page' if page.url == '/info/' }}>Info</a></li>
      </ul>
    </nav>
    </div>
    {% if page.url == '/' %}
      <h1 class="header__brand">
        <a href="/" rel="home" class="logo-mask">
          <span class="visually-hidden">Heliocantharus</span>
        </a>
      </h1>
    {% else %}
      <div class="header__brand">
        <a href="/" rel="home" class="logo-mask">
          <span class="visually-hidden">Heliocantharus</span>
        </a>
      </div>
    {% endif %}
        <button id="theme-toggle" class="theme-switch" aria-label="Przełącz motyw">
  <span class="theme-switch__thumb"></span>
  
    <span class="theme-switch__icon moon" aria-hidden="true">
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
  </span>
  <span class="theme-switch__icon sun" aria-hidden="true">
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><circle cx="12" cy="12" r="5"/><path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/></svg>
  </span>

</button>
  </header>

  <main id="main-content" tabindex="-1">
    {% if title %}
      <h1>{{ title }}</h1>
    {% endif %}
    
    {% if description %}
      <p class="description">{{ description }}</p>
    {% endif %}
    <article class="flow">
    {{ content | safe }}
    </article>
    <section>
    <h2>Ostatnie wpisy</h2>
<ul role="list" class="flow post-list">
  {%- for post in collections.posts | reverse -%}
    <li class="post-card">
      <article>
        <h3>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h3>
        <time datetime="{{ post.date | dateFilter }}">
          {{ post.date | dateFilter }}
        </time>
        <p>{{ post.data.description }}</p>
      </article>
    </li>
  {%- endfor -%}
</ul>
    </section>
  </main>

  <footer>
    <p>Mateusz Nowak | <a href="https://h62.pl">Helio62</a></p>
    
    <nav aria-label="Stopka">
      <ul role="list">
        <li><a href="/privacy/">Polityka prywatności</a></li>
      </ul>
    </nav>
  </footer>
<script>
  const toggle = document.querySelector('#theme-toggle');
  const root = document.documentElement;

  if (toggle) {
    toggle.addEventListener('click', () => {
      const currentTheme = root.getAttribute('data-theme');
      const nextTheme = currentTheme === 'light' ? 'dark' : 'light';
      
      root.setAttribute('data-theme', nextTheme);
      localStorage.setItem('helio-theme-pref', nextTheme);
    });
  }
</script>
</body>
</html>